generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model options {
  id      String @id @default(dbgenerated("gen_random_uuid()"))
  poll_id String
  text    String
  votes   Int    @default(0)
  polls   polls  @relation(fields: [poll_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([poll_id], map: "idx_options_poll_id")
  @@index([votes], map: "idx_options_votes")
}

model polls {
  id         String    @id @default(dbgenerated("gen_random_uuid()"))
  question   String
  created_at DateTime  @default(now()) @db.Timestamptz(6)
  options    options[]
}
